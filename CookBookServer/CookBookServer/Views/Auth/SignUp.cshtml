@{
}


<div>Регистрация!</div>

<div>
    @using (Html.BeginForm("SignUp", "Auth", FormMethod.Post))
    {
        <p class="field">
            <input type="text" name="FirstName" placeholder="Имя" />
            <i class="icon-user icon-large"></i>
        </p>
        <p class="field">
            <input type="text" name="LastName" placeholder="Фамилия" />
            <i class="icon-user icon-large"></i>
        </p>
        <p class="field">
            <input type="text" name="MiddleName" placeholder="Отчество" />
            <i class="icon-user icon-large"></i>
        </p>
        <p class="field">
            <input type="text" name="Nickname" placeholder="Никнейм" />
            <i class="icon-user icon-large"></i>
        </p>
        <p class="field">
            <input type="text" name="Email" placeholder="Введите е-мэйл" />
            <i class="icon-user icon-large"></i>
        </p>
        <p class="field">
            <input type="password" name="Password" placeholder="Пароль" />
            <i class="icon-lock icon-large"></i>
        </p>
        <p class="submit">
            <button type="submit" name="submit"><i class="icon-arrow-right icon-large">Отправить</i></button>
        </p>
    }
</div>
