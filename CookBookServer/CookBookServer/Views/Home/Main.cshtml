@{
    Layout = "_Layout";
    ViewData["Title"] = "Главная";
}
@section Styles {
    <link rel="stylesheet" href="~/css/index_style.css">
}
<section class="statistics">
    <div class="container">
        <div class="statistics__inner">
            <div class="statistics__item">
                <div class="statistics__item-num">14000</div>
                <div class="statistics__item-descr">
                    Рецептов<br>
                    создано
                </div>
            </div>
            <div class="statistics__item">
                <div class="statistics__item-num">1200</div>
                <div class="statistics__item-descr">
                    Шефов<br>
                    зарегистрировано
                </div>
            </div>
            <div class="statistics__item">
                <div class="statistics__item-num">170</div>
                <div class="statistics__item-descr">
                    Блюд приготовлено<br>
                    сегодня
                </div>
            </div>
        </div>
    </div>
</section>
<section class="recipes">
    <div class="container3">
        <div class="recipes__inner">
            <div class="recipes__items">
                    <div class="recipes__item-2">
                        <h2 class="recipes__title">Маринара</h2>
                        <div class="recipes__time">25 минут</div>
                        <div class="bottom">
                            <div class="meal__stars">5.0</div>
                        </div>
                    </div>
                    <div class="recipes__item-2">
                        <h2 class="recipes__title">Средиземноморский салат</h2>
                        <div class="recipes__time">5 минут</div>
                        <div class="bottom">
                            <div class="meal__stars">4.9</div>
                        </div>
                    </div>
                    <div class="recipes__item-2">
                        <h2 class="recipes__title">Классический стейк</h2>
                        <div class="recipes__time">10 минут</div>
                        <div class="bottom">
                            <div class="meal__stars">4.5</div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</section>