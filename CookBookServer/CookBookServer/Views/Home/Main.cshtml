@{
    Layout = "_Layout";
    ViewData["Title"] = "Главная";
}
@using Mongo.Models.Recipe
@model IEnumerable<RecipeModel>
@section Styles {
    <link rel="stylesheet" href="~/css/index_style.css">
}
<section class="statistics">
    <div class="container">
        <div class="statistics__inner">
            <div class="statistics__item">
                <div class="statistics__item-num">14000</div>
                <div class="statistics__item-descr">
                    Рецептов<br>
                    создано
                </div>
            </div>
            <div class="statistics__item">
                <div class="statistics__item-num">1200</div>
                <div class="statistics__item-descr">
                    Шефов<br>
                    зарегистрировано
                </div>
            </div>
            <div class="statistics__item">
                <div class="statistics__item-num">170</div>
                <div class="statistics__item-descr">
                    Блюд приготовлено<br>
                    сегодня
                </div>
            </div>
        </div>
    </div>
</section>
<section class="recipes">
    <div class="container3">
        <div class="recipes__inner">
            <div class="recipes__items">
                @foreach (var item in Model)
                {
                    <a href="@Url.ActionLink("Index","Recipe",new { id = item.Id })">
                        <div class="recipes__item-2">
                            <h2 class="recipes__title">@item.Title</h2>
                            <div class="recipes__time">@item.CookingTimeMinutes минут</div>
                            <div class="bottom">
                                <div class="meal__stars">@item.Raiting</div>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</section>